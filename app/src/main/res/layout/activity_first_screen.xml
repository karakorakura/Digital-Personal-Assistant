<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_first_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.dpa.FirstScreen"
    android:background="@drawable/lightboxes"
    >


    <Button
        android:id="@+id/button_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Items  to  buy"
        android:background="@drawable/round_button"
        android:textColor="#f8fdf9"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button_tasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your   Tasks"

        android:background="@drawable/round_button"
        android:textColor="#f8fdf9"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/button_recommend" />

    <Button
        android:id="@+id/button_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recommendations"
        android:background="@drawable/round_button"
        android:textColor="#f8fdf9"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/button_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage your Schedule"
        android:background="@drawable/round_button"
        android:textColor="#f8fdf9"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/button_tasks" />

    <Button
        android:id="@+id/button_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="near you"
        android:background="@drawable/round_button"
        android:textColor="#f8fdf9"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>

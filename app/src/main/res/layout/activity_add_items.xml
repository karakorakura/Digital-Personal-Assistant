<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_items"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.dpa.AddItems"
    android:background="#D4E6F1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:background="#E5E7E9">
        //
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/itv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Which Item ? "

                android:background="#D6EAF8"
                android:textSize="20sp"
                />

            <EditText
                android:id="@+id/iet_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@android:color/darker_gray"
                android:hint="Item name"/>


        </LinearLayout>

        //
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:id="@+id/itv_deadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" Deadline "
                android:background="#D6EAF8"
                android:textSize="20sp"
                />

            <EditText
                android:id="@+id/et_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="false"
                android:inputType="none"
                android:textIsSelectable="true"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:hint="Pick a Date"/>


        </LinearLayout>

        //

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:id="@+id/tv_priority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" Item Preference "
                android:textSize="20sp"
                android:gravity="center"
                android:background="#D6EAF8"
                />

        </LinearLayout>

        //

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            >


            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editseek"
                android:max="2"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:scrollbarSize="40dp"
                android:layout_gravity="center_horizontal"
                android:background="#75616A6B"/>

            <TextView
                android:id="@+id/itv_seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="20sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >
                <TextView
                    android:id="@+id/itv_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Item Type"

                    android:background="#D6EAF8"
                    android:textSize="20sp"
                    />

                <Spinner
                    android:id="@+id/sp_type"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"

                    />



            </LinearLayout>


            <Button
                android:id="@+id/bt_done"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=" Proceed "
                android:layout_marginTop="20dp"
                android:textSize="25sp"
                />

        </LinearLayout>





    </LinearLayout>





</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_schedule"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:fillViewport="false"
    android:nestedScrollingEnabled="true"
    android:overScrollMode="ifContentScrolls"
    tools:context="com.android.dpa.UserSchedule"
    android:background="#FCF3CF">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:nestedScrollingEnabled="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:nestedScrollingEnabled="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:id="@+id/tv_monday"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Monday"/>

            <android.support.design.widget.FloatingActionButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:id="@+id/bt_mon"/>

        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:id="@+id/lv_monday"
            android:layout_height="wrap_content">


        </ListView>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:nestedScrollingEnabled="true"
        android:overScrollMode="ifContentScrolls"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="4"
                android:id="@+id/tv_tuesday"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Tuesday"/>

            <android.support.design.widget.FloatingActionButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:id="@+id/bt_tue"/>

        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:id="@+id/lv_tuesday"
            android:layout_height="wrap_content">


        </ListView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="4"
                android:id="@+id/tv_wednesday"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Wednesday"/>

            <android.support.design.widget.FloatingActionButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:id="@+id/bt_wed"/>

        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:id="@+id/lv_wednesday"
            android:layout_height="wrap_content">


        </ListView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="4"
                android:id="@+id/tv_thursday"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Thursday"/>

            <android.support.design.widget.FloatingActionButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:id="@+id/bt_thu"/>

        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:id="@+id/lv_thursday"
            android:layout_height="wrap_content">


        </ListView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="4"
                android:id="@+id/tv_friday"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Friday"/>

            <android.support.design.widget.FloatingActionButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:id="@+id/bt_fri"/>

        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:id="@+id/lv_friday"
            android:layout_height="wrap_content">


        </ListView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="4"
                android:id="@+id/tv_saturday"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Saturday"/>

            <android.support.design.widget.FloatingActionButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:id="@+id/bt_sat"/>

        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:id="@+id/lv_saturday"
            android:layout_height="wrap_content">


        </ListView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="4"
                android:id="@+id/tv_sunday"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Sunday"/>

            <android.support.design.widget.FloatingActionButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:id="@+id/bt_sun"/>

        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:id="@+id/lv_sunday"
            android:layout_height="wrap_content">


        </ListView>


    </LinearLayout>





















</LinearLayout>
</ScrollView>
